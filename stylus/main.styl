site-bg = #8a9296
bgcolor = #2b2e2f
search-color = #7f7f7f
title-color = white
paragraph-color = #909090
bgcolor = #2b2e2f
accent-color = #8838ff

// MIXINS

border-radius(n)
    border-radius n
    -webkit-border-radius n
    -moz-border-radius n

placeholder(color)
    &::-webkit-input-placeholder
        color search-color
    &::-moz-input-placeholder
        color search-color
    &:-ms-input-placeholder
        color search-color
    &:-moz-input-placeholder
        color search-color

h1, h2, h3, p, a
    font-family Raleway

h1, h2, h3
    color title-color

h2, h3
    font-size 1.4em

p
    color paragraph-color

.pad
    padding 3em

body
    background-color site-bg
    padding-top 6em

header
    background-color #000
    width 100%
    padding 20px

    img
        height 24px
        width 24px
        cursor pointer
    
    #search
        background bgcolor
        border 0
        color search-color
        display inline-block
        width 200px
        height 25px
        float right
        font-size .95em
        margin-bottom 0
        border-radius(15px)

        placeholder(gray)

#content
    background bgcolor

    h1
        font-weight 300
        font-size 2em
        margin 0

.btn
    color white
    padding 7px 35px
    border-radius 3px
    position relative
    top 50%
    transform translateY(-50%)
    &:hover
        color white
        font-weight bold

#view-all
    background-color accent-color
    float right

#thumb-container
    display flex
    flex-direction row
    flex-wrap wrap
    align-content stretch

    img
        flex-grow 1
        max-width 100%
        cursor pointer

        &:hover
            animation enlarge .3s forwards

@keyframes enlarge
    0% { transform: scale(1) }
    40% { transform: scale(1.15) }
    100% { transform: scale(1.05) }

h2, h3
    font-weight 300
    margin-bottom 25px

#byweek
    border-left 1px solid gray

@media only screen and (max-width: 40em)

    p, a, h1, h2, h3
        text-align center
    
    h1
        font-size 1.5em
    
    h3
        margin 30px 0 40px 0

    #view-all
        width 100%
    
    #byweek
        border-left 0

    .pad
        padding 1.2em
    
    canvas
        height 100%